<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>

    <!--
        Declare the Java EE roles that will be used.
        ROLE_ prefix is needed for matching.
    -->
    <security-role>
        <role-name>ROLE_javaeeRole</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Everything must be secured for Spring Security to work</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>